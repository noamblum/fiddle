<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fiddle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#348C3F</item>
        <item name="colorPrimaryVariant">#348C3F</item>
        <item name="colorOnPrimary">#FAEBDC</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#B380B7</item>
        <item name="colorSecondaryVariant">#B380B7</item>
        <item name="colorOnSecondary">#171717</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
        <item name="android:textColor">#171717</item>
    </style>
    <style name="DefaultNumberPickerTheme" parent="Theme.Fiddle">
        <item name="colorControlNormal">#00000000</item>
        <item name="android:textColorPrimary">#B380B7</item>
        <item name="android:fontFamily">@font/abc_favorit</item>
    </style>
    <style name="DefaultTextInputTheme" parent="Theme.Fiddle">
        <item name="colorControlNormal">#00000000</item>
        <item name="android:textColorPrimary">#B380B7</item>
    </style>
    <style name="Theme.Fiddle.Splash" parent="Theme.Fiddle">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>
    <style name="Theme.Fiddle.CustomTheme" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>